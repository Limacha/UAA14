<Window x:Class="wpf_act0_ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_act0_ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Up Left" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Content="Up Right" Foreground="#FF08FF00" HorizontalAlignment="Right" VerticalAlignment="Top" Background="White" />
        <Button Content="Down Left" Foreground="#FF003EFF" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <Button Content="Down Right" Foreground="#FFEC00FF" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </Grid>
</Window>
