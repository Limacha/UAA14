<Window x:Class="Act4_NicolasPonchaut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Act4_NicolasPonchaut"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFFFF506">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="35">EXAMPLE MULTIPAGE</TextBlock>
            <StackPanel Grid.Column="1">
                <Button Name="btnPage1" Height="44" FontSize="24" Background="Red">Page 1</Button>
                <Button Name="btnPage2" Height="44" FontSize="24" Background="#FF005BFF">Page 2</Button>
            </StackPanel>
            
        </Grid>

        <Frame Grid.Row="1" Name="Contenu" NavigationUIVisibility="Hidden"></Frame>

    </Grid>
</Window>
